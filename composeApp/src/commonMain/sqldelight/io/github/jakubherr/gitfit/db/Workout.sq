import kotlin.Boolean;

CREATE TABLE IF NOT EXISTS Workout(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    note TEXT,
    completed INTEGER AS Boolean NOT NULL,
    date TEXT NOT NULL
);

insert:
INSERT OR REPLACE INTO Workout(note, completed, date) VALUES (?, ?, ?);

getCurrent:
SELECT * FROM Workout WHERE completed = 0 LIMIT 1;

getCurrentWithSeries:
SELECT *
FROM Workout
LEFT JOIN Block ON Block.workoutId = Workout.id
LEFT JOIN Series ON Series.blockId = Block.id
WHERE completed = 0
LIMIT 1
;